                            </MudCard>
                        </MudPaper>
                    </MudItem>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.LgAndUp" Invert="true">
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.subtitle1" Class="ml-2" Color="Color.Info">Historial</MudText>
                        <br />
                        @if (model is not null)
                        {
                            <PackageTimeLine PackageHistories="model.PackageHistories" />
                        }
                    </MudItem>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.MdAndDown" Invert="true">
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.subtitle1" Class="ml-2" Color="Color.Info">Historial</MudText>
                        <br />
                        @if (model is not null)
                        {
                            <PackageTimeLine PackageHistories="model.PackageHistories" />
                        }
                    </MudItem>
                </MudHidden>
                <MudItem xs="12" sm="12">
                    <MudText Typo="Typo.subtitle1" Class="ml-2" Color="Color.Info">Archivos Adjuntos</MudText>
                    <br />
                    <MudPaper Elevation="3">
                        <MudCard>
                            <MudCardContent>
                                @if (model.Attachments != null && model.Attachments.Count > 0)
                                {
                                    <MudList>
                                        @foreach (var file in model.Attachments)
                                        {
                                            var extension = Path.GetExtension(file).ToLower();
                                            <MudListItem @key="@file">
                                                @if (extension == ".png" || extension == ".jpg" || extension == ".jpeg" || extension == ".gif" || extension == ".bmp")
                                                {
                                                    <MudCard>
                                                        <MudCardHeader>
                                                            <CardHeaderAvatar>
                                                                <MudAvatar Color="Color.Secondary">
                                                                    <MudIcon Icon="@Icons.Material.Filled.Image"></MudIcon>
                                                                </MudAvatar>
                                                            </CardHeaderAvatar>
                                                            <CardHeaderContent>
                                                                <MudText Typo="Typo.body1">Imagen</MudText>
                                                            </CardHeaderContent>
                                                            <CardHeaderActions>
                                                                <MudIconButton Icon="@Icons.Material.Filled.Download" Color="Color.Primary" />
                                                                <MudIconButton Target="_blank" Href="@($"{@Configuration["ApiUrl"]}uploads/{TrackingNumber}/{file}")" Icon="@Icons.Material.Filled.ImageSearch" Color="Color.Primary" />
                                                            </CardHeaderActions>
                                                        </MudCardHeader>
                                                        <MudCardMedia Image="@($"{@Configuration["ApiUrl"]}uploads/{TrackingNumber}/{file}")" Height="300" />
                                                        <MudCardContent>
                                                            <MudText Typo="Typo.body2">@file</MudText>
                                                        </MudCardContent>
                                                    </MudCard>
                                                }
                                                else
                                                {
                                                    <MudCard>
                                                        <MudCardHeader>
                                                            <CardHeaderAvatar>
                                                                <MudAvatar Color="Color.Error">
                                                                    <MudIcon Icon="@Icons.Material.Filled.PictureAsPdf"></MudIcon>
                                                                </MudAvatar>
                                                            </CardHeaderAvatar>
                                                            <CardHeaderContent>
                                                                <MudText Typo="Typo.body1">PDF</MudText>
                                                            </CardHeaderContent>
                                                            <CardHeaderActions>
                                                                <MudIconButton Icon="@Icons.Material.Filled.Download" Color="Color.Primary" />
                                                                <MudIconButton Target="_blank" Href="@($"{@Configuration["ApiUrl"]}uploads/{TrackingNumber}/{file}")" Icon="@Icons.Material.Filled.ZoomOutMap" Color="Color.Primary" />
                                                            </CardHeaderActions>
                                                        </MudCardHeader>
                                                        <MudCardContent>
                                                            <MudText Typo="Typo.body2">@file</MudText>
                                                        </MudCardContent>
                                                    </MudCard>
                                                }
                                            </MudListItem>
                                        }
                                    </MudList>
                                }
                                else
                                {
                                    <MudAlert Severity="Severity.Info">El paquete no tiene archivos adjuntos.</MudAlert>
                                }
                            </MudCardContent>
                        </MudCard>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        You are not authorized
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public string? TrackingNumber { get; set; }

    private bool _processing = false;
    [Inject] ISnackbar Snackbar { get; set; }
    PackageDto model = new PackageDto();

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Tablero de Control", href: "/dashboard"),
        new BreadcrumbItem("Paquetes", href: "/paquetes/buscar"),
        new BreadcrumbItem("Ver Paquete", href:null, disabled: true),
    };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (TrackingNumber is not null)
            {
                var packageResponse = await _packageService.GetByTrackingNumber(TrackingNumber);
                if (packageResponse is not null)
                {
                    model = packageResponse.Adapt<PackageDto>();
                }
                else
                {
                    Snackbar.Add("El cliente solicitado no existe.", MudBlazor.Severity.Warning);
                    _navigationManager.NavigateTo("/paquetes/buscar", forceLoad: false);
                }
            }
            else
            {
                _navigationManager.NavigateTo("/paquetes/buscar", forceLoad: false);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
            Snackbar.Add("Ocurrio un error al recuperar la informacion del cliente.", MudBlazor.Severity.Error);
            _navigationManager.NavigateTo("/paquetes/buscar", forceLoad: false);
        }
    }

}

